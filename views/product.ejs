<div class="product-list">
    <% if (products.length> 0) { %>
        <div class="container">
            <div class="row">


                <% products.forEach(product=> { %>
                    <a href="/product/<%= product.name %>" class="col-md-2">
                        <div class="card p-2">
                            <h2>
                                <%= product.name %>
                            </h2>
                            <p>
                                <%= product.description %>
                            </p>
                            <p>Price: $<%= product.price %>
                            </p>
                        </div>
                    </a>
                    <% }) %>
            </div>
        </div>
        <% } else { %>
            <div>

                <div class="d-flex " style="justify-content: center; align-items: center;height: 85vh;">

                    <p class="text-white">No products available.</p>
                </div>
            </div>
            <% } %>
</div>